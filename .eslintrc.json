{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx", "eslint-plugin-no-inline-styles"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "excludedFiles": [
        "*.config.*",
        ".storybook/**/*",
        "**/*.stories.tsx",
        "**/*.stories.ts"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript",
        "airbnb",
        "plugin:react/jsx-runtime"
      ],
      "rules": {
        // no inline comments
        "no-inline-comments": "error",
        "react/jsx-props-no-spreading": [
          "error",
          {
            "html": "enforce",
            "custom": "enforce",
            "explicitSpread": "ignore"
          }
        ],
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    // adding airbnb-typescript to ts files
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript", "airbnb-typescript"],
      "parserOptions": {
        "project": ["./tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    },
    // allowing to use any in stories
    {
      "files": ["**/*.stories.tsx", "**/*.stories.ts"],
      "extends": ["airbnb-typescript"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    // disable it due to the nature of nx workspace configuration
    {
      "files": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": ["*.tsx", "*.jsx"],
      "rules": {
        "no-inline-styles/no-inline-styles": "error"
      }
    }
  ]
}
